//基础样式

$fontFamily: "Helvetica Neue",
Arial,
"Hiragino Sans GB",
"STHeiti",
"Microsoft YaHei",
"WenQuanYi Micro Hei",
sans-serif;
$monospaceFont: 'Menlo', 'Liberation Mono', 'Consolas', 'DejaVu Sans Mono', 'Ubuntu Mono', 'Courier New', 'andale mono', 'lucida console', monospace;
$fontSize: 16px;
$fontSizeLarge: 18px;
$lineHeight: 27px;


//基础颜色变量

$primary: #3B71CA;
$primary-light: hsl(213, 69%, 62%);
$primary-dark: hsl(213, 69%, 32%);
$primary-very-light: hsl(213, 69%, 90%);

$secondary: #9FA6B2;
$secondary-light: hsl(220, 10%, 70%);
$secondary-dark: hsl(220, 10%, 40%);
$secondary-very-light: hsl(220, 10%, 90%);

$success: #14A44D;
$success-light: hsl(145deg 71.82% 42.56%);
$success-dark: hsl(145, 80%, 17%);
$success-very-light: hsl(145, 80%, 90%);

$danger: #DC4C64;
$danger-light: hsl(352, 71%, 61%);
$danger-dark: hsl(352, 71%, 31%);
$danger-very-light: hsl(352, 71%, 90%);

$warning: #E4A11B;
$warning-light: hsl(42, 84%, 53%);
$warning-dark: hsl(42, 84%, 23%);
$warning-very-light: hsl(42, 84%, 90%);

$info: #54B4D3;
$info-light: hsl(190, 57%, 62%);
$info-dark: hsl(190, 57%, 32%);
$info-very-light: hsl(190, 57%, 90%);

$light: #FBFBFB;
$light-light: hsl(0, 0%, 95%);
$light-dark: hsl(0, 0%, 65%);
$light-very-light: hsl(0, 0%, 90%);

$dark: #332D2D;
$dark-light: hsl(0, 0%, 19%);
$dark-dark: hsl(0, 0%, 10%);
$dark-very-light: hsl(0, 0%, 90%);



$editorBg: $light;
$previewBg: $light;
$fontColor: $dark;
$linkColor: $primary;
$linkHoverColor: $primary-light;
$borderColor: $light-dark;
$toolbarSplitColor: $light-dark;
$fullWidthColor: $danger;

$elementGap: 16px;
$elementLittleGap: 12px;
$borderRadius: 3px;

$errorColor: $danger;
$warnColor: $warning;

$shadow: 0;

// 标题
$subTitle: $light;
// 滚动条

// 列表

// 代码块
$codeBackground: $light-dark;
$codeColor: $errorColor;
$codeBlockBg: $dark-light;


// 引用
$quoteBorderColor: $light-dark;
$quoteBackground: rgba(102, 128, 153, .05);
$quoteColor: $subTitle;

// 公式


// 编辑器主题

$editorHeaderColor: $fontColor;
$editorCommentColor: $linkColor;
$editorQuoteColor: $editorCommentColor;
$editorStringColor: $fontColor;
$editorLinkColor: $linkColor;
$editorUrlBgColor: $light;

$editorV2Color: $fontColor;
$editorV3Color: $fontColor;
$editorKeywordColor: $fontColor;


// 工具栏
// 暗色
$toolbarBgDark: $dark;
$toolbarShadowDark: $shadow;
$toolbarBtnBgDark: transparent;
$toolbarBtnColorDark: $light;
$toolbarBtnBgHoverDark: $light-dark;
$toolbarBtnHoverColorDark: $light-dark;
$toolbarBtnDisabledDark: $light-dark;

// 亮色
$toolbarBgLight: $light;
$toolbarShadowLight: $shadow;
$toolbarBtnBgLight: transparent;
$toolbarBtnColorLight: $dark;
$toolbarBtnBgHoverLight: $dark-very-light;
$toolbarBtnHoverColorLight: $dark-light;
$toolbarBtnDisabledLight: $dark-very-light;

:root {
  --bg-color:  #ffffff; /*change background*/
  --text-color: #333333; /*change text color*/
  --md-char-color: #C7C5C5; /*change color of meta characetrs like `*` in markdown */
  --meta-content-color: #5b808d; /*change color of meta contents like image text or link address in markdown */

  --primary-color: #428bca; /* color of primary buttons */
  --primary-btn-border-color: #285e8e;
  --primary-btn-text-color: #fff;

  --window-border: 1px solid #eee; /*border for sidebar, etc*/

  --active-file-bg-color: #eee; /*background color if list item in file tree or file list*/
  --active-file-text-color: inherit;
  --active-file-border-color: #777;

  --side-bar-bg-color: var(--bg-color); /*change background of sidebar*/
  --item-hover-bg-color: rgba(229, 229, 229, 0.59); /*background of control items when hover, like menu in sidebar*/
  --item-hover-text-color: inherit;
  --monospace: monospace; /*monospace font for codes, fences*/
}
